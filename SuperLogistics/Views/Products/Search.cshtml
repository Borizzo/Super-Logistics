@model IEnumerable<SuperLogistics.Models.Product>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<form method="get" asp-action="Search">
    <p>
        <input type="search" placeholder="Enter Product's EAN or Name" value=" @ViewData["GetProductDetails"]" name="ProductSearch" style="width:700px" class="form-control-lg"/>
        <input type="submit" value="Search" class="btn btn-success" />
    </p>


</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
      
            <td>
                
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.EAN">Details</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>

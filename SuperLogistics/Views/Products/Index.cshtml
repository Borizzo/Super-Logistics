@model IEnumerable<SuperLogistics.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products List</h1>
<p>
    @ViewBag.sessioncreate
</p>
<p>
    @ViewBag.sessionedit
</p>

<p>
    <a class="btn btn-warning" asp-action="Create">Add New Product</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
       
            <td>
                <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.EAN">Edit</a> 
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.EAN">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EAN">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
